extended:
  scripts:
    newTurnUnit:
      - new: ACAMP_nTU_less_start_tus_on_first_turn
        offset: 2
        code: |
          var int newTUs;
          var int faction;

          unit.getFaction faction;

          if and eq turn 1 eq faction FACTION_HOSTILE;
            unit.getTimeUnitsMax newTUs;
            muldiv newTUs 25 100;
            unit.setTimeUnits newTUs;
          end;

          return;